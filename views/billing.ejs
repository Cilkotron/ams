<!DOCTYPE html>
<html lang="en">
<head>
  <%- include('partials/_head.ejs') %>
  <title>Billing</title>
</head>
<body>
  <%- include('partials/_header.ejs') %>

  <div class="container mt-5">
    <h2>Billing</h2>
    <form action="/billing/auto-replenish" method="POST">
      <div class="mb-3">
        <label for="autoReplenish" class="form-label">Auto-Replenish</label>
        <input type="checkbox" id="autoReplenish" name="autoReplenish" <% if(user.autoReplenish) { %>checked<% } %>>
      </div>
      <div class="mb-3">
        <label for="autoReplenishCredits" class="form-label">Credits to Purchase</label>
        <input type="number" class="form-control" id="autoReplenishCredits" name="autoReplenishCredits" value="<%= user.autoReplenishCredits %>">
      </div>
      <div class="mb-3">
        <label for="autoReplenishThreshold" class="form-label">Threshold for Auto-Replenish</label>
        <input type="number" class="form-control" id="autoReplenishThreshold" name="autoReplenishThreshold" value="<%= user.autoReplenishThreshold %>">
      </div>
      <button type="submit" class="btn btn-primary">Save Settings</button>
    </form>

    <h3 class="mt-3">Past Transactions</h3>
    <ul id="transactions-list"></ul>

    <script src="/js/billing.js"></script>
  </div>

  <%- include('partials/_footer.ejs') %>
</body>
</html>